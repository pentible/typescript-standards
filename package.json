{
    "name": "@pentible/typescript-standards",
    "version": "0.0.0",
    "private": "true",
    "license": "MIT",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "lint": "check-package-lock && shellcheck-all && tsc --noEmit && eslint . && prettier --loglevel warn --check .",
        "lint:fix": "eslint --fix . && prettier --loglevel warn --write .",
        "prepare": "husky install"
    },
    "devDependencies": {
        "esbuild": "0.15.7",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "typescript": "4.8.3"
    }
}
