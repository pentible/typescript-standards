{
    "name": "@pentible/typescript-standards",
    "version": "0.0.0",
    "private": "true",
    "license": "MIT",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "build": "npm run build --ws --if-present",
        "lint": "ls-lint && check-package-lock && shellcheck-all && tsc -b && eslint . && prettier --loglevel warn --check .",
        "lint:fix": "eslint --fix . && prettier --loglevel warn --write .",
        "prepare": "husky install && npm run build"
    },
    "devDependencies": {
        "@ls-lint/ls-lint": "1.11.2",
        "esbuild": "0.16.15",
        "husky": "8.0.3",
        "lint-staged": "13.1.0",
        "prettier": "2.8.2",
        "typescript": "5.0.3"
    }
}
