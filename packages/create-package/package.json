{
    "name": "@pentible/create-package",
    "version": "0.105.0",
    "description": "npm initializer to create a standard pentible package",
    "repository": {
        "type": "git",
        "url": "https://github.com/pentible/typescript-standards.git"
    },
    "license": "MIT",
    "author": "pentible",
    "type": "commonjs",
    "imports": {
        "#src/*": [
            "./src/*.js",
            "./src/*.ts"
        ]
    },
    "main": "./dist/main.js",
    "source": "./src/main.ts",
    "bin": {
        "create-package": "./dist/main.js"
    },
    "files": [
        "dist/main.js"
    ],
    "scripts": {
        "build": "esbuild --bundle --platform=node --target=node20 --minify --outfile=./dist/main.js src/main.ts",
        "dev": "npm run build -- --watch",
        "preinstall": "mkdir -p dist && touch dist/main.js",
        "start": "./dist/main.js"
    },
    "devDependencies": {
        "@types/ini": "4.1.1",
        "@types/inquirer": "9.0.7",
        "@types/node": "22.13.5",
        "chalk": "4.1.2",
        "deepmerge": "4.3.1",
        "execa": "8.0.1",
        "ini": "5.0.0",
        "inquirer": "9.2.15",
        "yaml": "2.7.0"
    },
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public"
    }
}
