{
    "name": "@pentible/create-package",
    "version": "0.101.0",
    "description": "npm initializer to create a standard pentible package",
    "repository": {
        "type": "git",
        "url": "https://github.com/pentible/typescript-standards.git"
    },
    "license": "MIT",
    "author": "pentible",
    "type": "commonjs",
    "main": "./dist/main.js",
    "source": "./src/main.ts",
    "bin": {
        "create-package": "./dist/main.js"
    },
    "files": [
        "dist/main.js"
    ],
    "scripts": {
        "build": "esbuild --bundle --platform=node --target=node18 --minify --outfile=./dist/main.js src/main.ts",
        "dev": "npm run build -- --watch",
        "preinstall": "mkdir -p dist && touch dist/main.js",
        "start": "./dist/main.js"
    },
    "devDependencies": {
        "@types/ini": "4.1.0",
        "@types/inquirer": "9.0.7",
        "@types/node": "18.19.22",
        "chalk": "4.1.2",
        "deepmerge": "4.3.1",
        "execa": "8.0.1",
        "ini": "4.1.2",
        "inquirer": "9.2.15",
        "yaml": "2.4.1"
    },
    "engines": {
        "node": ">=16"
    },
    "publishConfig": {
        "access": "public"
    }
}
