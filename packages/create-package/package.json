{
    "name": "@pentible/create-package",
    "version": "0.113.0",
    "description": "npm initializer to create a standard pentible package",
    "repository": {
        "type": "git",
        "url": "https://github.com/pentible/typescript-standards.git"
    },
    "license": "MIT",
    "author": "pentible",
    "type": "module",
    "exports": {
        ".": {
            "default": "./dist/main.js"
        }
    },
    "bin": {
        "create-package": "./dist/main.js"
    },
    "files": [
        "dist/main.js"
    ],
    "scripts": {
        "build": "node esbuild.config.mjs",
        "dev": "npm run build -- --watch",
        "preinstall": "mkdir -p dist && touch dist/main.js",
        "lint": "eslint",
        "prepare": "npm run build",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/ini": "4.1.1",
        "@types/inquirer": "9.0.7",
        "@types/node": "22.15.31",
        "chalk": "5.4.1",
        "deepmerge": "4.3.1",
        "esbuild": "0.25.5",
        "execa": "8.0.1",
        "ini": "5.0.0",
        "inquirer": "9.2.15",
        "yaml": "2.8.0"
    },
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public"
    }
}
