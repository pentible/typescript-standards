{
    "name": "@pentible/create-package",
    "version": "0.43.0",
    "description": "npm initializer to create a standard pentible package",
    "repository": {
        "type": "git",
        "url": "https://github.com/pentible/typescript-standards.git"
    },
    "license": "MIT",
    "author": "pentible",
    "type": "commonjs",
    "main": "./dist/index.js",
    "source": "./src/index.ts",
    "bin": {
        "create-package": "./dist/index.js"
    },
    "files": [
        "dist/index.js"
    ],
    "scripts": {
        "build": "esbuild --bundle --platform=node --target=node18 --outfile=./dist/index.js src/index.ts",
        "start": "./dist/index.js",
        "watch": "npm run build -- --watch"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "deepmerge": "4.2.2",
        "execa": "6.1.0",
        "ini": "3.0.1",
        "inquirer": "9.1.4",
        "yaml": "2.2.1"
    },
    "devDependencies": {
        "@types/ini": "1.3.31",
        "@types/inquirer": "9.0.3",
        "@types/node": "18.11.18"
    },
    "engines": {
        "node": "^18.8.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
