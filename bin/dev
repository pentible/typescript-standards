#!/usr/bin/env bash

set -e

declare script_dir
script_dir="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
declare repo_dir
repo_dir="$(dirname "$script_dir")"

# load mise environment (in case we're run from outside the project directory)
eval "$(cd "$repo_dir" && mise hook-env 2> /dev/null)"

dev::usage() {
    echo 'usage: dev <command>'
    echo '       dev setup    # install app and dev env dependencies'
    echo '       dev reset    # deletes temp files and sets project back up'
    echo '       dev start    # run build watchers'
    echo '       dev lint     # run linters'
    echo '       dev lint fix # fix auto-fixable linter errors'
    echo '       dev test     # run tests'
    exit 1
}

dev::setup() {
    cd "$repo_dir"

    echo '==> install brew'
    if ! type 'brew' > /dev/null 2>&1; then
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    fi

    echo '==> install dependencies'
    brew install \
        mise \
        shellcheck \
        yamllint

    echo '==> allow mise to load project directory'
    mise trust --all

    echo '==> dev reset'
    dev::reset
}

dev::reset() {
    cd "$repo_dir"

    echo '==> delete git ignored files'
    git clean -ffdX

    echo '==> reload mise'
    mise install

    echo '==> install dependencies'
    npm install
}

dev::start() {
    turbo dev
}

dev::lint() {
    check-package-lock
    shellcheck-all
    yamllint --strict .
    tsc -b
    eslint .
    prettier --log-level warn --check .
}

dev::lint::fix() {
    eslint --fix .
    prettier --log-level warn --write .
}

dev::test() {
    dev::test::check-package-lock
}

# TODO: we really need a snapshot test or something (just to check the output)
dev::test::check-package-lock() {
    for example in "${repo_dir}/packages/check-package-lock/examples/"*; do
        echo "==> $(basename "$example")"
        cd "$example"
        check-package-lock || true
    done
}

case "$*" in
    setup) dev::setup ;;
    reset) dev::reset ;;
    start) dev::start ;;
    lint) dev::lint ;;
    'lint fix') dev::lint::fix ;;
    test) dev::test ;;
    *) dev::usage ;;
esac
